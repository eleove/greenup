<div class="lesevents">
  <h1>Liste des évènements</h1>
  <% @events.each do |event| %>
    <div class="card la" >
      <div class="card-img-top">
        <%= cl_image_tag event.location.photo, height: 200, width: 300, crop: :fill %>
      </div>
      <div class="card-body bodycard">
        <h4 class="card-title"><i class="fas fa-map-marked-alt i"></i><%= event.location.name %></h4>
        <p class="card-text"><i class="far fa-calendar-alt i"></i><%= l(event.schedule, format: '%A %e %B %Y') %></p>

        <a href="#" class="btn center-block"></i>Voir l'événement</a>
      </div>
    </div>
  <% end %>
</div>
