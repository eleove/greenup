<%= simple_form_for [@location, @event] do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.input :schedule, label: 'Date et heure de début', as: :string, start_year: Date.today.year, end_year: Date.today.year + 2, order: [:day, :month, :year] %>
  <%= f.submit "Créer", class: "btn btn-block btn-lieu" %>
<% end %>
