<div class="rejoindre">

  <h1> Rejoindre l'évènement </h1>

  <h2> <%= @event.location.name %>
  <h3 style="padding-top: 0px !important;"> <%= l(@event.schedule, format: '%A %e %B %Y') %> </h3>
  <% if @event.user == current_user  %>
    <h6 style="text-align: center"> <em> Evènement créé par vous </em> </h6>
  <% else %>
    <h6 style="text-align: center"> <em> Evènement créé par <%= @event.user.username %> </em> </h6>
  <% end %>


  <br>

  <% if @event.event_participants.length == 0 %>
    <p> Pas encore de participant à cet évènement </p>
  <% elsif @event.event_participants.length == 1 %>
    <p> <%= @event.event_participants.length %> participant à cet évènement </p>
  <% else %>
    <p> <%= @event.event_participants.length %> participants à cet évènement </p>
  <% end %>

  <% if current_user.id != @event.user_id %>
    <% if @event.users.include?(current_user)  %>
      <p>
        <i class="fa fa-check" aria-hidden="true"></i> Vous participez à cet évènement
      </p>
      <p> <%= link_to 'Se désinscrire', event_event_participant_path(@event), class: "btn btn-danger", method: :delete  %>
    <% else %>
      <p>
        <%= link_to 'Participez à cet évènement', event_event_participants_path(@event), class: "btn btn-success", method: :post  %>
      </p>
    <% end %>
  <% end %>

  <span>
    <div id="fb-root"></div>
    <script async defer src="https://connect.facebook.net/fr_FR/sdk.js#xfbml=1&version=v3.2&appId=414892035984987&autoLogAppEvents=1"></script>

    <div class="fb-share-button" data-href="https://green-up.herokuapp.com/" data-layout="button" data-size="large" data-mobile-iframe="true"><a target="_top" href="https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2Ftoto.com%2F&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">Partager</a></div>

    <script>window.twttr = (function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0],
        t = window.twttr || {};
      if (d.getElementById(id)) return t;
      js = d.createElement(s);
      js.id = id;
      js.src = "https://platform.twitter.com/widgets.js";
      fjs.parentNode.insertBefore(js, fjs);

      t._e = [];
      t.ready = function(f) {
        t._e.push(f);
      };

      return t;
    }(document, "script", "twitter-wjs"));
    </script>

    <a class="twitter-share-button"
      href="https://twitter.com/intent/tweet?text=Hey%20les%20gars%20ça%20vous%20dit%20de%20venir%20nettoyer%20cet%20endroit%20avec%20moi"
      data-size="large">
    Tweet</a>
  </span>
</div>



