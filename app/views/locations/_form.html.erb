<%= simple_form_for @location do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.input :name, label: "Nom de l'emplacement", placeholder: "Soyez le plus précis possible (ville à proximité, point d'intérêt, etc." %>
  <%= f.input :description, placeholder: "Décrivez l'emplacement"%>
  <div class="checkboxinput">
    <%= f.input :garbage, label: 'Type de déchets présents', as: :check_boxes, collection: Location::GARBAGE %>
    <div class="buttonphoto">
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <input type="hidden" name="lat" id="lat">
      <input type="hidden" name="long" id="long">
  </div>

  </div>

<div class="creer">
    <%= f.submit "Créer", class: "btn btn-block btn-lieu" %>
  <% end %>
</div>

