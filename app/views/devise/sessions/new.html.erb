<h2> Se connecter </h2>

<%= link_to(user_google_oauth2_omniauth_authorize_path) do %>
  <p class="btn btn-danger google-btn">
    <img src="https://img.icons8.com/small/64/000000/google-logo.png" style="height: 20px"> </img> Se connecter avec Google
  </p>
<% end %>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                label: 'Ton email',
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                label: 'Ton mot de passe',
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Connexion" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
